{
    "plugins": [
        "prettier-plugin-jinja-template",
        "prettier-plugin-tailwindcss"
    ],
    "overrides": [
        {
            "files": [
                "**/templates/**/*.html"
            ],
            "options": {
                "parser": "jinja-template"
            }
        }
    ],
    "tailwindStylesheet": "./theme/src/theme.css",
    "trailingComma": "es5",
    "tabWidth": 2,
    "semi": true,
    "singleQuote": true,
    "printWidth": 80
}