    "version": "0.2.0",
    "configurations": [
        {
            "name": "Static Content",
            "type": "debugpy",
            "request": "launch",
            "args": [
                "buildserver",
                "--settings",
                "website_django.settings.production",
                "0.0.0.0:8001"
            ],
            "django": true,
            "autoStartBrowser": false,
            "program": "${workspaceFolder}\\manage.py"
        },
        {
            "name": "Django",
            "type": "debugpy",
            "request": "launch",
            "args": [
                "runserver"
            ],
            "django": true,
            "autoStartBrowser": false,
            "program": "${workspaceFolder}\\manage.py"
        }
    ]
}